<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Plant Type Image - Increased size and adjusted margins -->
        <ImageView
            android:id="@+id/imageViewPlantType"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:padding="4dp"
            android:background="@drawable/image_background"
            android:contentDescription="Plant Type Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="2dp">

            <TextView
                android:id="@+id/textViewPlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewPlantType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textViewWateringSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="6dp"
                android:text="EDIT"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cornerRadius="6dp"
                android:textColor="#3E8B75"
                app:strokeColor="#3E8B75"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="HAPUS"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cornerRadius="6dp"
                android:textColor="#3E8B75"
                app:strokeColor="#3E8B75"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

